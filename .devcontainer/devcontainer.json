{
    "name": "Python and Rust Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
    },
    "extensions": [
        "ms-python.python",
        "rust-lang.rust-analyzer"
    ],
    "postCreateCommand": "cargo build --release && echo 'Setup complete!'",
    "remoteUser": "root"
}